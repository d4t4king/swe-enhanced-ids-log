$cgiparams{'MONTH'} = $now[4];

$now[4]++;
$now[4] = "0$now[4]" if($now[4] < 10);
&getcgihash(\%cgiparams);

$now[4] = $cgiparams{'MONTH'}+1;
$now[4] = "0$now[4]" if($now[4] < 10);

my $start = -1;
